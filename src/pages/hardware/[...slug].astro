---
import { getCollection, render } from 'astro:content';
import Base from '../../layouts/Base.astro';

export async function getStaticPaths() {
  const hardware = await getCollection('hardware');
  return hardware.map((item) => ({
    params: { slug: item.id },
    props: { item },
  }));
}

const { item } = Astro.props;
const { Content } = await render(item);

const isSubItem = item.id.includes('/');
const parentId = isSubItem ? item.id.split('/')[0] : null;
const allHardware = await getCollection('hardware');
const parent = parentId ? allHardware.find((h) => h.id === parentId) : null;

const backHref = parent ? `/hardware/${parentId}/` : '/hardware/';
const backLabel = parent ? `back to ${parent.data.title}` : 'back to hardware gallery';
---

<Base title={`${item.data.title} - sych0net`} description={item.data.description}>
  <article>
    <h1>{item.data.title}</h1>
    <p style="color: #665200;">{item.data.date.toISOString().split('T')[0]}</p>
    <hr />
    <Content />
  </article>
  <hr />
  <p><a href={backHref}>&larr; {backLabel} [ESC]</a></p>
</Base>
