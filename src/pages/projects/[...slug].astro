---
import { getCollection, render } from 'astro:content';
import Base from '../../layouts/Base.astro';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.id },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await render(project);

const isSubProject = project.id.includes('/');
const parentId = isSubProject ? project.id.split('/')[0] : null;
const allProjects = await getCollection('projects');
const parent = parentId ? allProjects.find((p) => p.id === parentId) : null;

const backHref = parent ? `/projects/${parentId}/` : '/projects/';
const backLabel = parent ? `back to ${parent.data.title}` : 'back to project logs';
---

<Base title={`${project.data.title} - sych0net`} description={project.data.description}>
  <article>
    <h1>{project.data.title}</h1>
    <p style="color: #665200;">{project.data.date.toISOString().split('T')[0]}</p>
    <hr />
    <Content />
  </article>
  <hr />
  <p><a href={backHref}>&larr; {backLabel} [ESC]</a></p>
</Base>
