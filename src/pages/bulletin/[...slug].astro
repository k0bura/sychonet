---
import { getCollection, render } from 'astro:content';
import Base from '../../layouts/Base.astro';

export async function getStaticPaths() {
  const entries = await getCollection('bulletin');
  return entries
    .filter((e) => e.data.type === 'post')
    .map((item) => ({
      params: { slug: item.id },
      props: { item },
    }));
}

const { item } = Astro.props;
const { Content } = await render(item);
---

<Base title={`${item.data.title} - sychonet`} description={item.data.description}>
  <article>
    <h1>{item.data.title}</h1>
    <p style="color: #665200;">{item.data.date.toISOString().split('T')[0]}</p>
    <hr />
    <Content />
  </article>
  <hr />
  <p><a href="/bulletin/">&larr; back to bulletin board [ESC]</a></p>
</Base>
