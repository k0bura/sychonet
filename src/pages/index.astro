import Base from '../layouts/Base.astro';

let fortune = '';
try {
  const res = await fetch('http://yerkee.com/api/fortune/computers');
  const data = await res.json();
  if (data.fortune) {
    fortune = data.fortune
      .replace(/\t/g, '    ')
      .split('\n')
      .map((line: string) => `  ${line}`)
      .join('\n')
      .trimEnd();
  }
} catch {}
if (!fortune) fortune = '  NO CARRIER';
